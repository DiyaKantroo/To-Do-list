<html>
    <head>
        <title>DAY</title>
        <meta charset = "utf-8">
        <link rel = "stylesheet" href = "css\styles.css">
    </head>
    <body>
        <div class = "box" id = "heading">
     <h1> <%= day%> </h1>
        </div>

     <div class = "box">
     <%   for(var i=0; i<items.length ; i++){   %>
           <div class="item" >
           <input type="checkbox">
           <p> <%=items[i]%> </p> 
           </div>                     
     <%   }                                           %>
       
    </div>

       <div class="box">
        <form class = "item" action = "/" method="POST">
         
        <input type="text" name = "newtask" placeholder="New item">
        <button type = "submit">+</button>
    </form>
       </div>
</body>
</html>